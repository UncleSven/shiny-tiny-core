{
  "name": "unclesven/shiny-tiny-core",
  "description": "Core functionality of the Shiny-Tiny Framework",
  "keywords": [
    "Shiny-Tiny",
    "framework",
    "core"
  ],
  "license": "proprietary",
  "readme": "README.md",
  "type": "library",
  "version": "1.0.0",
  "authors": [
    {
      "name": "UncleSven",
      "email": "email@sven-breuer.org",
      "homepage": "https://github.com/UncleSven"
    }
  ],
  "autoload": {
    "psr-4": {
      "ShinyTinyCore\\": "src/"
    },
    "files": [
      "src/Bootstrap/meta.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "platform-check": true,
    "sort-packages": true
  },
  "prefer-stable": true,
  "require": {
    "php": "^8.3",
    "ext-mbstring": "*",
    "m1/env": "^2.2",
    "matthiasmullie/minify": "^1.3",
    "symfony/var-dumper": "^7.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^11.1"
  },
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon"
  }
}
